{
  "info": {
    "name": "Finishing Company API",
    "description": "API collection for the Finishing Company role",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Profile",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": { "raw": "{{base_url}}/api/profile", "host": ["{{base_url}}"], "path": ["api", "profile"] }
      }
    },
    {
      "name": "Update Profile",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"commercial_name\": \"New Name\",\n  \"contact_info\": \"123456789\",\n  \"profile_description\": \"Updated description\"\n}"
        },
        "url": { "raw": "{{base_url}}/api/profile", "host": ["{{base_url}}"], "path": ["api", "profile"] }
      }
    },
    {
      "name": "Toggle Status",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": { "raw": "{{base_url}}/api/toggle-status", "host": ["{{base_url}}"], "path": ["api", "toggle-status"] }
      }
    },
    {
      "name": "Get Reviews",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": { "raw": "{{base_url}}/api/reviews", "host": ["{{base_url}}"], "path": ["api", "reviews"] }
      }
    },
    {
      "name": "Get Analytics",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": { "raw": "{{base_url}}/api/analytics", "host": ["{{base_url}}"], "path": ["api", "analytics"] }
      }
    },
    {
      "name": "Get Performance",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": { "raw": "{{base_url}}/api/performance", "host": ["{{base_url}}"], "path": ["api", "performance"] }
      }
    },
    {
      "name": "Get Requests",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": { "raw": "{{base_url}}/api/requests", "host": ["{{base_url}}"], "path": ["api", "requests"] }
      }
    },
    {
      "name": "Get Request Details",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": { "raw": "{{base_url}}/api/requests/:requestId", "host": ["{{base_url}}"], "path": ["api", "requests", ":requestId"] }
      }
    },
    {
      "name": "Respond to Request",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"accepted\",\n  \"message\": \"Your request is accepted.\"\n}"
        },
        "url": { "raw": "{{base_url}}/api/requests/:requestId/respond", "host": ["{{base_url}}"], "path": ["api", "requests", ":requestId", "respond"] }
      }
    },
    {
      "name": "Get Request History",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": { "raw": "{{base_url}}/api/history", "host": ["{{base_url}}"], "path": ["api", "history"] }
      }
    }
  ]
}
