  "item": [
    {
      "name": "Get My Properties",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": { "raw": "{{base_url}}/customer/properties", "host": ["{{base_url}}"], "path": ["customer", "properties"] }
      }
    },
    {
      "name": "Create Property",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Sample Property\",\n  \"description\": \"Description here\",\n  \"price\": 100000\n}"
        },
        "url": { "raw": "{{base_url}}/customer/properties", "host": ["{{base_url}}"], "path": ["customer", "properties"] }
      }
    },
    {
